{
  "name": "@tails/api",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bun run --env-file=../../.env --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && bun run build:workers",
    "build:workers": "bun build src/workers/image.worker.ts src/workers/pdf.worker.ts src/workers/general.worker.ts src/workers/qrcode.worker.ts src/workers/video.worker.ts --outdir dist/workers --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint src"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@json2csv/plainjs": "^7.0.6",
    "@tails/auth": "workspace:*",
    "@tails/cache": "workspace:*",
    "@tails/db": "workspace:*",
    "@tails/logger": "workspace:*",
    "@tails/redis": "workspace:*",
    "@tails/s3": "workspace:*",
    "@tails/validators": "workspace:*",
    "@types/uuid": "^11.0.0",
    "hono": "^4.6.14",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^23.0.0",
    "qrcode": "^1.5.4",
    "resend": "^4.0.0",
    "sharp": "^0.33.0",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.7.2"
  }
}
