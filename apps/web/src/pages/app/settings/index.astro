---
export const prerender = false;

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { requireAuth } from "@/lib/auth-check";
import { PRICING_PLANS } from "@/lib/constants";

const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";

// Check auth
let session;
try {
  session = await requireAuth(Astro.request);
} catch (response) {
  return response as Response;
}

const cookie = Astro.request.headers.get("cookie") || "";

// Get tab from query params
const url = new URL(Astro.request.url);
const activeTab = url.searchParams.get("tab") || "account";

// Fetch connected accounts
let connectedAccounts: Array<{ providerId: string; accountId: string; createdAt: string }> = [];
try {
  const res = await fetch(`${API_URL}/api/auth/list-accounts`, {
    headers: { cookie },
    credentials: "include"
  });
  if (res.ok) {
    connectedAccounts = await res.json();
  }
} catch (e) {
  // Fallback - accounts might not be available
}

// Fetch dashboard stats for usage data
let stats = {
  storageUsed: { bytes: 0, total: 1073741824 },
  files: { count: 0, size: 0 },
  shortLinks: { total: 0 },
  apiKeys: { count: 0 },
};

try {
  const res = await fetch(`${API_URL}/api/dashboard/stats`, {
    headers: { cookie },
    credentials: "include"
  });
  if (res.ok) {
    stats = await res.json();
  }
} catch (e) {
  // Fallback to defaults
}

// Format bytes helper
function formatBytes(bytes: number): string {
  if (bytes === 0) return "0 B";
  const k = 1024;
  const sizes = ["B", "KB", "MB", "GB", "TB"];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + " " + sizes[i];
}

// Calculate percentage
function formatPercentage(used: number, total: number): number {
  if (total === 0) return 0;
  return Math.round((used / total) * 100);
}

const storagePercent = formatPercentage(stats.storageUsed?.bytes || 0, stats.storageUsed?.total || 1);

const user = session.user;
const initial = user.name?.charAt(0).toUpperCase() || user.email?.charAt(0).toUpperCase() || "U";

// Check which providers are connected
const hasGithub = connectedAccounts.some(a => a.providerId === "github");
const hasGoogle = connectedAccounts.some(a => a.providerId === "google");
const hasCredential = connectedAccounts.some(a => a.providerId === "credential");

// Current plan (hardcoded for now - would come from subscription API)
const currentPlan = "Free";
---

<DashboardLayout title="Settings">
  <div class="max-w-5xl mx-auto divide-y divide-dashed">
    <!-- Header -->
    <div class="pb-10">
      <div class="space-y-1">
        <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">Settings</h1>
        <p class="text-muted-foreground text-base">Manage your account and billing preferences</p>
      </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-dashed border-border pt-10">
      <nav class="flex gap-8">
        <a
          href="/app/settings?tab=account"
          class:list={[
            "pb-4 px-1 text-sm font-semibold border-b-2 transition-colors",
            activeTab === "account"
              ? "border-primary text-foreground"
              : "border-transparent text-muted-foreground hover:text-foreground hover:border-muted-foreground/30"
          ]}
        >
          Account
        </a>
        <a
          href="/app/settings?tab=billing"
          class:list={[
            "pb-4 px-1 text-sm font-semibold border-b-2 transition-colors",
            activeTab === "billing"
              ? "border-primary text-foreground"
              : "border-transparent text-muted-foreground hover:text-foreground hover:border-muted-foreground/30"
