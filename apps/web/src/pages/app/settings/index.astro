                    <p class="text-3xl font-bold mt-2">
                      {plan.price}
                      <span class="text-sm font-normal text-muted-foreground">/mo</span>
                    </p>
                    <p class="text-xs text-muted-foreground mt-1">{plan.description}</p>
                  </div>

                  <ul class="space-y-2.5 mb-6 flex-1">
                    {plan.features.map((feature) => (
                      <li class="flex items-center gap-2 text-sm">
                        <div class="w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center flex-shrink-0">
                          <svg class="w-3 h-3 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                          </svg>
                        </div>
                        {feature}
                      </li>
                    ))}
                  </ul>

                  <button
                    class:list={[
                      "w-full py-2.5 rounded-xl font-medium text-sm transition-colors",
                      plan.title === currentPlan
                        ? "bg-surface text-muted-foreground cursor-not-allowed"
                        : plan.highlighted
                          ? "bg-primary text-primary-foreground hover:bg-primary/90"
                          : "bg-surface hover:bg-muted"
                    ]}
                    disabled={plan.title === currentPlan}
                  >
                    {plan.title === currentPlan ? "Current Plan" : "Upgrade"}
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Payment Method Section -->
        <div class="rounded-[20px] bg-surface p-1.5">
          <div class="rounded-[12px] bg-background p-6 shadow-xs">
            <div class="flex flex-col gap-1.5 mb-6">
              <h3 class="font-medium text-lg">Payment Method</h3>
              <p class="text-sm text-muted-foreground">Manage your payment methods</p>
            </div>

            <div class="flex items-center gap-4 p-4 bg-surface rounded-xl">
              <div class="w-14 h-10 bg-gradient-to-r from-slate-700 to-slate-900 rounded-lg flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
