---
export const prerender = false;

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { requireAuth } from "@/lib/auth-check";

const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";

// Check auth
let session;
try {
  session = await requireAuth(Astro.request);
} catch (response) {
  return response as Response;
}

const cookie = Astro.request.headers.get("cookie") || "";

// Fetch connected accounts
let connectedAccounts: Array<{ providerId: string; accountId: string; createdAt: string }> = [];
try {
  const res = await fetch(`${API_URL}/api/auth/list-accounts`, {
    headers: { cookie },
    credentials: "include"
  });
  if (res.ok) {
    connectedAccounts = await res.json();
  }
} catch (e) {
  // Fallback - accounts might not be available
}

const user = session.user;
const initial = user.name?.charAt(0).toUpperCase() || user.email?.charAt(0).toUpperCase() || "U";

// Check which providers are connected
const hasGithub = connectedAccounts.some(a => a.providerId === "github");
const hasGoogle = connectedAccounts.some(a => a.providerId === "google");
const hasCredential = connectedAccounts.some(a => a.providerId === "credential");
---

<DashboardLayout title="Account Settings">
  <div class="max-w-2xl flex flex-col gap-8 py-8">
    <!-- Header -->
    <div>
      <h2 class="text-2xl font-semibold">Account Settings</h2>
      <p class="text-muted-foreground">Manage your account details and preferences</p>
    </div>

    <!-- Avatar Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Avatar</h3>
          <p class="text-sm text-muted-foreground">Change your profile picture</p>
        </div>
        <div class="flex items-center gap-6">
          <div class="relative group">
            {user.image ? (
              <img
                src={user.image}
                alt={user.name || "Profile"}
                class="w-16 h-16 rounded-full object-cover"
              />
            ) : (
              <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
                <span class="text-xl font-semibold text-primary">{initial}</span>
              </div>
            )}
            <label class="absolute inset-0 flex items-center justify-center bg-background/50 backdrop-blur-sm rounded-full opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"/>
              </svg>
              <input type="file" accept="image/*" class="sr-only" />
            </label>
          </div>
          <div class="flex-1">
            <input
              type="text"
              value={user.image || ""}
              placeholder="Avatar URL"
              readonly
              class="w-full px-4 py-2.5 bg-surface border-0 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary/50"
            />
          </div>
        </div>
      </div>
      <div class="px-2 pt-4 pb-2">
        <p class="text-muted-foreground text-sm">Square images work best for avatars</p>
      </div>
    </div>

    <!-- Full Name Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <form class="flex flex-col">
        <div class="rounded-[12px] bg-background p-6 shadow-xs">
          <div class="flex flex-col gap-1.5 mb-6">
            <h3 class="font-medium text-lg">Full Name</h3>
            <p class="text-sm text-muted-foreground">Your name will be displayed on your profile</p>
          </div>
          <input
            type="text"
            name="name"
            value={user.name || ""}
            placeholder="Your name"
            class="w-full px-4 py-2.5 bg-surface border-0 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary/50"
          />
        </div>
        <div class="flex items-center justify-between px-2 pt-4 pb-2">
          <p class="text-muted-foreground text-sm">Your display name</p>
          <button
            type="submit"
            class="px-5 py-2 bg-primary text-primary-foreground rounded-xl font-medium text-sm hover:bg-primary/90 transition-colors"
          >
            Save
          </button>
        </div>
      </form>
    </div>

    <!-- Email Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Email</h3>
          <p class="text-sm text-muted-foreground">Email associated with your account</p>
        </div>
        <input
          type="email"
          value={user.email || ""}
          disabled
          readonly
          class="w-full px-4 py-2.5 bg-surface border-0 rounded-xl text-sm text-muted-foreground cursor-not-allowed"
        />
      </div>
      <div class="px-2 pt-4 pb-2">
        <p class="text-muted-foreground text-sm">Email cannot be changed</p>
      </div>
    </div>

    <!-- Connected Accounts -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Connected Accounts</h3>
          <p class="text-sm text-muted-foreground">Manage your connected sign-in methods</p>
        </div>

        <div class="space-y-3">
          <!-- GitHub -->
          <div class="flex items-center justify-between p-4 bg-surface rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-[#24292e] flex items-center justify-center">
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-sm">GitHub</p>
                <p class="text-xs text-muted-foreground">Sign in with GitHub</p>
              </div>
            </div>
            {hasGithub ? (
              <span class="px-3 py-1.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-lg text-xs font-medium">
                Connected
              </span>
            ) : (
              <a href="/api/auth/sign-in/github" class="px-4 py-2 bg-surface hover:bg-muted rounded-xl text-sm font-medium transition-colors">
                Connect
              </a>
            )}
          </div>

          <!-- Google -->
          <div class="flex items-center justify-between p-4 bg-surface rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-white border border-border flex items-center justify-center">
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-sm">Google</p>
                <p class="text-xs text-muted-foreground">Sign in with Google</p>
              </div>
            </div>
            {hasGoogle ? (
              <span class="px-3 py-1.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-lg text-xs font-medium">
                Connected
              </span>
            ) : (
              <a href="/api/auth/sign-in/google" class="px-4 py-2 bg-surface hover:bg-muted rounded-xl text-sm font-medium transition-colors">
                Connect
              </a>
            )}
          </div>

          <!-- Email/Password -->
          <div class="flex items-center justify-between p-4 bg-surface rounded-xl">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-sm">Email & Password</p>
                <p class="text-xs text-muted-foreground">{user.email}</p>
              </div>
            </div>
            <span class="px-3 py-1.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-lg text-xs font-medium">
              Primary
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Current Session -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Current Session</h3>
          <p class="text-sm text-muted-foreground">Information about your active session</p>
        </div>

        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-border/50">
            <span class="text-sm text-muted-foreground">Session ID</span>
            <code class="text-xs bg-surface px-3 py-1.5 rounded-lg font-mono">{session.session.id.slice(0, 12)}...</code>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-border/50">
            <span class="text-sm text-muted-foreground">Created</span>
            <span class="text-sm">{new Date(session.session.createdAt || Date.now()).toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}</span>
          </div>
          <div class="flex items-center justify-between py-3">
            <span class="text-sm text-muted-foreground">Expires</span>
            <span class="text-sm">{new Date(session.session.expiresAt).toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}</span>
          </div>
        </div>
      </div>
      <div class="flex justify-end px-2 pt-4 pb-2">
        <a
          href="/api/auth/sign-out"
          class="px-4 py-2 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-xl text-sm font-medium transition-colors"
        >
          Sign out of all devices
        </a>
      </div>
    </div>

    <!-- Delete Account -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5">
          <h3 class="font-medium text-lg">Delete Account</h3>
          <p class="text-sm text-muted-foreground">
            Permanently delete your account and all associated data. This action cannot be undone.
          </p>
        </div>
      </div>
      <div class="flex justify-end px-2 pt-4 pb-2">
        <button
          type="button"
          class="px-5 py-2 bg-red-600 text-white rounded-xl font-medium text-sm hover:bg-red-700 transition-colors"
        >
          Delete Account
        </button>
      </div>
    </div>
  </div>
</DashboardLayout>
