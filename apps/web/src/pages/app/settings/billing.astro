---
export const prerender = false;

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { requireAuth } from "@/lib/auth-check";
import { PRICING_PLANS } from "@/lib/constants";

const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";

// Check auth
let session;
try {
  session = await requireAuth(Astro.request);
} catch (response) {
  return response as Response;
}

const cookie = Astro.request.headers.get("cookie") || "";

// Fetch dashboard stats for usage data
let stats = {
  storageUsed: { bytes: 0, total: 1073741824 },
  files: { count: 0, size: 0 },
  shortLinks: { total: 0 },
  apiKeys: { count: 0 },
};

try {
  const res = await fetch(`${API_URL}/api/dashboard/stats`, {
    headers: { cookie },
    credentials: "include"
  });
  if (res.ok) {
    stats = await res.json();
  }
} catch (e) {
  // Fallback to defaults
}

// Format bytes helper
function formatBytes(bytes: number): string {
  if (bytes === 0) return "0 B";
  const k = 1024;
  const sizes = ["B", "KB", "MB", "GB", "TB"];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + " " + sizes[i];
}

// Calculate percentage
function formatPercentage(used: number, total: number): number {
  if (total === 0) return 0;
  return Math.round((used / total) * 100);
}

const storagePercent = formatPercentage(stats.storageUsed?.bytes || 0, stats.storageUsed?.total || 1);

// Current plan (hardcoded for now - would come from subscription API)
const currentPlan = "Free";
---

<DashboardLayout title="Billing">
  <div class="max-w-4xl flex flex-col gap-8 py-8">
    <!-- Header -->
    <div>
      <h2 class="text-2xl font-semibold">Billing</h2>
      <p class="text-muted-foreground">Manage your subscription and billing details</p>
    </div>

    <!-- Current Plan Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6">
          <div class="flex flex-col gap-1.5">
            <h3 class="font-medium text-lg">Current Plan</h3>
            <p class="text-sm text-muted-foreground">You are currently on the {currentPlan} plan</p>
          </div>
          <div class="flex items-center gap-3">
            <span class="px-4 py-2 bg-primary/10 text-primary text-sm font-medium rounded-xl">
              {currentPlan}
            </span>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <div class="p-4 bg-surface rounded-xl">
            <p class="text-sm text-muted-foreground mb-1">Storage</p>
            <p class="text-lg font-semibold">
              {formatBytes(stats.storageUsed?.bytes || 0)}
              <span class="text-sm font-normal text-muted-foreground">/ {formatBytes(stats.storageUsed?.total || 1073741824)}</span>
            </p>
            <div class="mt-2 h-1.5 bg-muted rounded-full overflow-hidden">
              <div
                class="h-full bg-primary rounded-full transition-all"
                style={`width: ${storagePercent}%`}
              />
            </div>
          </div>
          <div class="p-4 bg-surface rounded-xl">
            <p class="text-sm text-muted-foreground mb-1">Files</p>
            <p class="text-lg font-semibold">
              {stats.files?.count || 0}
              <span class="text-sm font-normal text-muted-foreground">uploaded</span>
            </p>
          </div>
          <div class="p-4 bg-surface rounded-xl">
            <p class="text-sm text-muted-foreground mb-1">Short Links</p>
            <p class="text-lg font-semibold">
              {stats.shortLinks?.total || 0}
              <span class="text-sm font-normal text-muted-foreground">created</span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Plans Section -->
    <div class="flex flex-col gap-4">
      <div>
        <h3 class="font-medium text-lg">Available Plans</h3>
        <p class="text-sm text-muted-foreground">Upgrade or change your plan</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {PRICING_PLANS.map((plan) => (
          <div class="rounded-[20px] bg-surface p-1.5 relative">
            {plan.highlighted && (
              <span class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-primary text-primary-foreground text-xs font-medium rounded-full z-10">
                Popular
              </span>
            )}
            <div class:list={[
              "rounded-[12px] bg-background p-5 shadow-xs h-full flex flex-col",
              plan.highlighted && "ring-2 ring-primary"
            ]}>
              <div class="text-center mb-4">
                <h4 class="font-semibold text-lg">{plan.title}</h4>
                <p class="text-3xl font-bold mt-2">
                  {plan.price}
                  <span class="text-sm font-normal text-muted-foreground">/mo</span>
                </p>
                <p class="text-xs text-muted-foreground mt-1">{plan.description}</p>
              </div>

              <ul class="space-y-2.5 mb-6 flex-1">
                {plan.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm">
                    <div class="w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center flex-shrink-0">
                      <svg class="w-3 h-3 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    {feature}
                  </li>
                ))}
              </ul>

              <button
                class:list={[
                  "w-full py-2.5 rounded-xl font-medium text-sm transition-colors",
                  plan.title === currentPlan
                    ? "bg-surface text-muted-foreground cursor-not-allowed"
                    : plan.highlighted
                      ? "bg-primary text-primary-foreground hover:bg-primary/90"
                      : "bg-surface hover:bg-muted"
                ]}
                disabled={plan.title === currentPlan}
              >
                {plan.title === currentPlan ? "Current Plan" : "Upgrade"}
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Payment Method Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Payment Method</h3>
          <p class="text-sm text-muted-foreground">Manage your payment methods</p>
        </div>

        <div class="flex items-center gap-4 p-4 bg-surface rounded-xl">
          <div class="w-14 h-10 bg-gradient-to-r from-slate-700 to-slate-900 rounded-lg flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-sm text-muted-foreground">No payment method</p>
            <p class="text-xs text-muted-foreground">Add a payment method to upgrade</p>
          </div>
          <button class="px-4 py-2 bg-surface hover:bg-muted rounded-xl text-sm font-medium transition-colors">
            Add Card
          </button>
        </div>
      </div>
    </div>

    <!-- Billing History Section -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background shadow-xs overflow-hidden">
        <div class="p-6 border-b border-border/50">
          <div class="flex flex-col gap-1.5">
            <h3 class="font-medium text-lg">Billing History</h3>
            <p class="text-sm text-muted-foreground">View your past invoices</p>
          </div>
        </div>

        <div class="px-6 py-12 text-center">
          <div class="w-14 h-14 rounded-2xl bg-surface flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z"/>
            </svg>
          </div>
          <p class="text-sm font-medium">No billing history yet</p>
          <p class="text-sm text-muted-foreground mt-1">Invoices will appear here once you upgrade</p>
        </div>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="rounded-[20px] bg-surface p-1.5">
      <div class="rounded-[12px] bg-background p-6 shadow-xs">
        <div class="flex flex-col gap-1.5 mb-6">
          <h3 class="font-medium text-lg">Cancel Subscription</h3>
          <p class="text-sm text-muted-foreground">
            Cancel your subscription and downgrade to the free plan. Your data will be preserved.
          </p>
        </div>
        <button
          type="button"
          disabled
          class="px-5 py-2 bg-surface text-muted-foreground rounded-xl font-medium text-sm cursor-not-allowed"
        >
          No Active Subscription
        </button>
      </div>
    </div>
  </div>
</DashboardLayout>
