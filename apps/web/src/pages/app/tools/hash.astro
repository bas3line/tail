---
export const prerender = false;

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import ToolPageLayout from "@/components/ToolPageLayout.astro";
import { requireAuth } from "@/lib/auth-check";

let session;
try {
  session = await requireAuth(Astro.request);
} catch (response) {
  return response as Response;
}
---

<DashboardLayout title="Hash Generator">
  <ToolPageLayout
    title="Hash Generator"
    description="Generate MD5, SHA-1, SHA-256, SHA-512 hashes. Verify file integrity."
    icon="hash"
    tags={["MD5", "SHA-256", "SHA-512", "File Verify"]}
    status="free"
  >
    <div class="space-y-6">
      <!-- Input Type -->
      <div class="flex gap-2 mb-4">
        <button
          id="textTab"
          class="px-4 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-medium transition-colors"
        >
          Text
        </button>
        <button
          id="fileTab"
          class="px-4 py-2 bg-muted text-foreground rounded-lg text-sm font-medium hover:bg-muted/80 transition-colors"
        >
          File
        </button>
      </div>

      <!-- Text Input -->
      <div id="textInput" class="space-y-4">
        <label class="block">
          <span class="text-sm font-medium mb-2 block">Text to Hash</span>
          <textarea
            id="inputText"
            rows="4"
            placeholder="Enter text to hash..."
            class="w-full px-4 py-3 rounded-lg border border-border bg-background focus:outline-none focus:ring-2 focus:ring-accent resize-none"
          ></textarea>
        </label>
      </div>

      <!-- File Input -->
      <div id="fileInput" class="hidden">
        <div
          id="dropzone"
          class="border-2 border-dashed border-border rounded-lg p-12 text-center hover:border-accent transition-colors cursor-pointer"
        >
          <svg class="w-12 h-12 mx-auto mb-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
          </svg>
          <p class="text-sm font-medium mb-1">Drop a file here or click to browse</p>
          <p class="text-xs text-muted-foreground">Any file type supported</p>
          <input type="file" id="fileUpload" class="hidden" />
        </div>
      </div>

      <button
        id="generateBtn"
        class="w-full px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
      >
        Generate Hashes
      </button>

      <!-- Results -->
      <div id="results" class="hidden space-y-4">
        <h3 class="text-sm font-medium">Hash Results</h3>
        
        {["MD5", "SHA-1", "SHA-256", "SHA-512"].map((algo) => (
          <div class="space-y-2">
            <label class="text-sm font-medium text-muted-foreground">{algo}</label>
            <div class="flex gap-2">
              <input
                type="text"
                id={`hash-${algo.toLowerCase()}`}
                readonly
                class="flex-1 px-4 py-3 rounded-lg border border-border bg-muted font-mono text-sm"
              />
              <button
                class="copy-btn px-4 py-3 bg-muted hover:bg-muted/80 rounded-lg transition-colors"
                data-target={`hash-${algo.toLowerCase()}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184"/>
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </ToolPageLayout>
</DashboardLayout>

<script>
  const textTab = document.getElementById("textTab");
  const fileTab = document.getElementById("fileTab");
  const textInput = document.getElementById("textInput");
  const fileInput = document.getElementById("fileInput");
  const results = document.getElementById("results");

  textTab?.addEventListener("click", () => {
    textTab.className = "px-4 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-medium transition-colors";
    fileTab!.className = "px-4 py-2 bg-muted text-foreground rounded-lg text-sm font-medium hover:bg-muted/80 transition-colors";
    textInput?.classList.remove("hidden");
    fileInput?.classList.add("hidden");
  });

  fileTab?.addEventListener("click", () => {
    fileTab.className = "px-4 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-medium transition-colors";
    textTab!.className = "px-4 py-2 bg-muted text-foreground rounded-lg text-sm font-medium hover:bg-muted/80 transition-colors";
    textInput?.classList.add("hidden");
    fileInput?.classList.remove("hidden");
  });

  document.getElementById("generateBtn")?.addEventListener("click", async () => {
    const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
    const inputText = (document.getElementById("inputText")).value;
    
    if (!inputText) {
      alert("Please enter text to hash");
      return;
    }

    try {
      const response = await fetch(`${API_URL}/api/tools/hash/all`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ input: inputText }),
      });

      if (!response.ok) {
        throw new Error("Failed to generate hashes");
      }

      const hashes = await response.json();

      (document.getElementById("hash-md5")).value = hashes.md5;
      (document.getElementById("hash-sha-1")).value = hashes.sha1;
      (document.getElementById("hash-sha-256")).value = hashes.sha256;
      (document.getElementById("hash-sha-512")).value = hashes.sha512;

      // Show results
      results?.classList.remove("hidden");
    } catch (error) {
      console.error("Error generating hashes:", error);
      alert("Failed to generate hashes. Please try again.");
    }
  });

  // Copy buttons
  document.querySelectorAll(".copy-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const target = (e.currentTarget).dataset.target;
      const input = document.getElementById(target!);
      input.select();
      navigator.clipboard.writeText(input.value);
    });
  });
</script>
