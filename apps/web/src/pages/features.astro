---
// Disable prerendering to check auth on server
export const prerender = false;

import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import Button from "@/components/ui/Button.astro";
import Icon from "@/components/Icon.astro";
import { SITE, TOOLS, FEATURES } from "@/lib/constants";
import { getSession } from "@/lib/auth-check";

const session = await getSession(Astro.request);
---

<Layout title="Features" description="Explore all the tools and features available in Tails." session={session}>
  <div class="divide-y divide-dashed">
    <!-- Hero -->
    <section class="border-t border-dashed">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-20 lg:py-28">
          <div class="flex flex-col gap-6 max-w-2xl">
            <h1 class="text-4xl md:text-5xl font-medium tracking-tight">
              All tools
            </h1>
            <p class="text-lg text-muted-foreground">
              12+ developer tools accessible through a single, unified API.
            </p>
            <div class="flex gap-4 pt-2">
              <Button href="/signup">
                Get started
              </Button>
              <Button href="/pricing" variant="secondary">
                Pricing
              </Button>
            </div>
          </div>
        </Container>
      </div>
    </section>

    <!-- All Tools Grid -->
    <section>
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-16">
          <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {TOOLS.map((tool) => (
              <li class="bg-card p-5 rounded-xl flex flex-col gap-4 h-full border border-transparent hover:border-border transition-all duration-300">
                <div class="flex items-start justify-between">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground">
                    <Icon name={tool.icon} class="w-5 h-5" />
                  </div>
                  {tool.featured && (
                    <span class="text-xs font-medium text-accent bg-accent/10 px-2 py-1 rounded-full">
                      Popular
                    </span>
                  )}
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-medium mb-1">{tool.title}</h3>
                  <p class="text-muted-foreground text-sm">{tool.description}</p>
                </div>
                {tool.tags && (
                  <div class="flex flex-wrap gap-2">
                    {tool.tags.map((tag) => (
                      <span class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded-md">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </li>
            ))}
          </ul>
        </Container>
      </div>
    </section>

    <!-- Platform Features -->
    <section>
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-16 space-y-10">
          <div class="space-y-3">
            <h2 class="text-2xl md:text-3xl font-medium tracking-tight">
              Platform
            </h2>
            <p class="text-muted-foreground">
              Built for scale, security, and speed.
            </p>
          </div>

          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {FEATURES.map((feature) => (
              <li class="bg-card p-6 rounded-xl flex gap-4 h-full">
                <div class="w-12 h-12 rounded-lg bg-muted flex items-center justify-center text-muted-foreground flex-shrink-0">
                  <Icon name={feature.icon} class="w-6 h-6" />
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-medium mb-1">{feature.title}</h3>
                  <p class="text-muted-foreground text-sm">{feature.description}</p>
                </div>
              </li>
            ))}
          </ul>
        </Container>
      </div>
    </section>

    <!-- CTA -->
    <section class="border-b border-dashed">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-12 md:py-16">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
            <div>
              <h2 class="text-xl md:text-2xl font-medium">
                Ready to start building?
              </h2>
              <p class="text-muted-foreground">
                Get started for free, no credit card required.
              </p>
            </div>
            <Button href="/signup">
              Get started
            </Button>
          </div>
        </Container>
      </div>
    </section>
  </div>
</Layout>
