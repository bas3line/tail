---
// Disable prerendering to check auth on server
export const prerender = false;

import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import Button from "@/components/ui/Button.astro";
import Icon from "@/components/Icon.astro";
import { SITE, FEATURES, FAQS } from "@/lib/constants";
import { getSession } from "@/lib/auth-check";

const session = await getSession(Astro.request);
console.log("Home page session:", session);
---

<Layout title={SITE.TAGLINE} session={session}>
  <div class="divide-y divide-dashed">
    <!-- Hero section -->
    <section class="border-t border-dashed">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] flex flex-col justify-center h-full mx-auto">
        <Container class="py-24 md:py-28 w-full lg:py-36 flex flex-col gap-14 md:gap-20">
          <div class="flex flex-col gap-8">
            <div class="relative mx-auto text-center flex flex-col gap-6">
              <h1 class="relative text-4xl md:text-5xl lg:text-6xl max-w-[20ch] font-medium mx-auto tracking-tight">
                {SITE.TAGLINE}
              </h1>
              <p class="mx-auto max-w-[50ch] md:text-lg text-muted-foreground">
                {SITE.DESCRIPTION}
              </p>
            </div>
            <div class="flex flex-col sm:flex-row w-full items-center justify-center gap-4">
              <Button href="/signup" class="w-full sm:w-auto">
                Get started for free
              </Button>
              <Button href="/tools" variant="secondary" class="w-full sm:w-auto">
                Explore tools
              </Button>
            </div>
          </div>
        </Container>
      </div>
    </section>

    <!-- Tools Carousel section -->
    <section id="tools">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-20">
          <div class="flex flex-col lg:flex-row gap-10 lg:gap-16 items-start">
            <!-- Left side - Title -->
            <div class="lg:w-1/3 space-y-4">
              <h2 class="text-2xl tracking-tight md:text-3xl lg:text-4xl font-medium">
                12+ tools, one API
              </h2>
              <p class="text-muted-foreground">
                Everything you need to build. Click to explore.
              </p>
              <div class="flex gap-2 pt-4">
                <button 
                  id="prev-btn"
                  type="button"
                  class="w-10 h-10 rounded-full border border-border bg-card flex items-center justify-center hover:bg-muted transition disabled:opacity-30"
                  aria-label="Previous tool"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>
                <button 
                  id="next-btn"
                  type="button"
                  class="w-10 h-10 rounded-full border border-border bg-card flex items-center justify-center hover:bg-muted transition disabled:opacity-30"
                  aria-label="Next tool"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </button>
              </div>
              <a href="/tools" class="inline-flex items-center gap-1 text-sm text-accent hover:underline pt-2">
                View all tools
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            
            <!-- Right side - Cards carousel -->
            <div class="lg:w-2/3 overflow-hidden">
              <div id="tools-carousel" class="flex gap-4 transition-transform duration-300 ease-out">
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="database" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Drive</h3>
                  <p class="text-muted-foreground text-sm">Upload and store files with S3-backed storage and global CDN.</p>
                </div>
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="download" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Video Downloader</h3>
                  <p class="text-muted-foreground text-sm">Download from YouTube, TikTok, Instagram and 100+ platforms.</p>
                </div>
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="link" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Short Links</h3>
                  <p class="text-muted-foreground text-sm">Create short links with click tracking and custom domains.</p>
                </div>
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="image" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Images</h3>
                  <p class="text-muted-foreground text-sm">Resize, compress, convert. Automatic optimization for web.</p>
                </div>
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="code" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Paste</h3>
                  <p class="text-muted-foreground text-sm">Share code with syntax highlighting and expiration.</p>
                </div>
                <div class="tool-card min-w-[280px] md:min-w-[320px] bg-card p-6 rounded-xl border border-transparent hover:border-border transition-all">
                  <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center text-muted-foreground mb-4">
                    <Icon name="camera" class="w-5 h-5" />
                  </div>
                  <h3 class="text-lg font-medium mb-2">Screenshot API</h3>
                  <p class="text-muted-foreground text-sm">Capture any website programmatically.</p>
                </div>
              </div>
            </div>
          </div>
        </Container>
      </div>
    </section>

    <!-- Features section -->
    <section>
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="space-y-10 lg:space-y-14 py-20">
          <div class="relative flex flex-col items-center space-y-3 text-balance">
            <h2 class="relative text-center text-balance text-2xl tracking-tight md:text-3xl lg:text-4xl max-w-4xl">
              Built for developers
            </h2>
            <p class="max-w-prose md:text-lg text-muted-foreground text-center">
              Simple, powerful, and reliable.
            </p>
          </div>

          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
            {FEATURES.map((feature) => (
              <li class="bg-card p-6 rounded-xl flex gap-4 h-full">
                <div class="w-12 h-12 rounded-lg bg-muted flex items-center justify-center text-muted-foreground flex-shrink-0">
                  <Icon name={feature.icon} class="w-6 h-6" />
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-medium mb-1">{feature.title}</h3>
                  <p class="text-muted-foreground text-sm">{feature.description}</p>
                </div>
              </li>
            ))}
          </ul>
        </Container>
      </div>
    </section>

    <!-- FAQ section -->
    <section>
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="pt-12 pb-20">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 lg:gap-20">
            <div class="flex flex-col items-center lg:items-start space-y-4 text-center lg:text-left">
              <h2 class="relative text-center text-balance text-2xl tracking-tight md:text-3xl lg:text-4xl lg:text-left max-w-4xl">
                FAQ
              </h2>
              <p class="max-w-prose md:text-lg text-muted-foreground text-balance">
                Common questions about Tails.
              </p>
            </div>

            <div class="lg:col-span-2 divide-y divide-dashed">
              {FAQS.map((faq) => (
                <details class="group py-4">
                  <summary class="flex cursor-pointer items-center justify-between font-medium">
                    <span>{faq.question}</span>
                    <svg class="h-5 w-5 shrink-0 transition duration-300 group-open:-rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <p class="mt-4 text-sm text-muted-foreground">{faq.answer}</p>
                </details>
              ))}
            </div>
          </div>
        </Container>
      </div>
    </section>

    <!-- CTA section -->
    <section class="border-b border-dashed">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="py-12 md:py-20">
          <div class="flex flex-col items-center space-y-6">
            <div class="space-y-4 text-center">
              <h2 class="relative text-center text-balance text-2xl tracking-tight md:text-3xl lg:text-4xl max-w-4xl">
                Ready to get started?
              </h2>
              <p class="mx-auto max-w-2xl text-muted-foreground md:text-lg text-balance">
                Join thousands of developers using Tails.
              </p>
            </div>

            <div class="flex flex-col sm:flex-row w-full items-center justify-center gap-4">
              <Button href="/signup" class="w-full sm:w-auto">
                Get started for free
              </Button>
              <Button href="/pricing" variant="secondary" class="w-full sm:w-auto">
                View pricing
              </Button>
            </div>
          </div>
        </Container>
      </div>
    </section>
  </div>
</Layout>

<script>
  const carousel = document.getElementById('tools-carousel');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  
  let currentIndex = 0;
  const cardWidth = 340; // min-width + gap
  const cards = carousel?.querySelectorAll('.tool-card') || [];
  const maxIndex = Math.max(0, cards.length - 2);

  function updateCarousel() {
    if (carousel) {
      carousel.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
    }
    if (prevBtn) prevBtn.disabled = currentIndex === 0;
    if (nextBtn) nextBtn.disabled = currentIndex >= maxIndex;
  }

  prevBtn?.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      updateCarousel();
    }
  });

  nextBtn?.addEventListener('click', () => {
    if (currentIndex < maxIndex) {
      currentIndex++;
      updateCarousel();
    }
  });

  updateCarousel();
</script>
