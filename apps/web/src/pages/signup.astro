---
import "@/styles/globals.css";
import { SITE } from "@/lib/constants";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>Sign up | {SITE.TITLE}</title>
  </head>
  <body class="min-h-screen bg-background">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-sm border-b border-border">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-14">
          <a href="/" class="text-xl font-semibold tracking-tight">
            {SITE.TITLE}
          </a>
          <div class="flex items-center gap-4">
            <a href="/pricing" class="text-sm text-muted-foreground hover:text-foreground transition">Pricing</a>
            <a href="/features" class="text-sm text-muted-foreground hover:text-foreground transition">Features</a>
            <a href="/login" class="text-sm font-medium px-4 py-2 bg-accent text-accent-foreground rounded-lg hover:bg-accent/90 transition">
              Sign in
            </a>
          </div>
        </div>
      </div>
    </nav>

    <div class="min-h-screen grid lg:grid-cols-2 pt-14">
      <!-- Left Side - Image only -->
      <div class="hidden lg:block relative overflow-hidden bg-[#1a1a2e]">
        <img 
          src="/images/auth-bg.jpg" 
          alt="3D abstract art"
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>

      <!-- Right Side - Form + Text -->
      <div class="flex items-center justify-center p-8 lg:p-12">
        <div class="w-full max-w-md space-y-8">
          <!-- Header -->
          <div class="space-y-2">
            <h2 class="text-3xl font-medium tracking-tight">Create your account</h2>
            <p class="text-muted-foreground">Start building for free. No credit card required.</p>
          </div>

          <!-- Email Form (Step 1) -->
          <form id="email-form" class="space-y-5">
            <div class="grid grid-cols-2 gap-3">
              <div class="space-y-2">
                <label for="firstName" class="text-sm font-medium">First name</label>
                <input 
                  type="text" 
                  id="firstName"
                  name="firstName" 
                  placeholder="John" 
                  required 
                  autocomplete="given-name"
                  class="w-full px-4 py-3.5 text-sm bg-card border border-border rounded-xl placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                />
              </div>
              <div class="space-y-2">
                <label for="lastName" class="text-sm font-medium">Last name</label>
                <input 
                  type="text" 
                  id="lastName"
                  name="lastName" 
                  placeholder="Doe" 
                  required 
                  autocomplete="family-name"
                  class="w-full px-4 py-3.5 text-sm bg-card border border-border rounded-xl placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label for="email" class="text-sm font-medium">Email</label>
              <input 
                type="email" 
                id="email"
                name="email" 
                placeholder="you@example.com" 
                required 
                autocomplete="email"
                class="w-full px-4 py-3.5 text-sm bg-card border border-border rounded-xl placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
              />
            </div>

            <button 
              type="submit" 
              id="send-otp-btn"
              class="w-full px-4 py-3.5 bg-accent text-white rounded-xl font-medium hover:opacity-90 transition-all active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Continue
            </button>

            <p class="text-xs text-muted-foreground text-center">
              By signing up, you agree to our 
              <a href="/terms" class="text-foreground hover:text-accent transition underline">Terms</a> 
              and 
              <a href="/privacy" class="text-foreground hover:text-accent transition underline">Privacy Policy</a>.
            </p>
          </form>

          <!-- OTP Form (Step 2) - Hidden initially -->
          <form id="otp-form" class="space-y-5 hidden">
            <div class="space-y-2">
              <div class="flex items-center justify-between">
                <label for="otp" class="text-sm font-medium">Verification Code</label>
                <button type="button" id="back-btn" class="text-sm text-accent hover:underline">
                  Change email
                </button>
              </div>
              <p class="text-sm text-muted-foreground">
                We sent a 6-digit code to <span id="email-display" class="font-medium text-foreground"></span>
              </p>
              <input 
                type="text" 
                id="otp"
                name="otp" 
                placeholder="000000" 
                required 
                maxlength="6"
                pattern="[0-9]{6}"
                autocomplete="one-time-code"
                class="w-full px-4 py-3.5 text-sm bg-card border border-border rounded-xl placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all text-center text-2xl tracking-[0.5em] font-mono"
              />
            </div>

            <button 
              type="submit" 
              id="verify-btn"
              class="w-full px-4 py-3.5 bg-accent text-white rounded-xl font-medium hover:opacity-90 transition-all active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Create account
            </button>

            <button 
              type="button"
              id="resend-btn"
              class="w-full text-sm text-muted-foreground hover:text-foreground transition"
            >
              Didn't receive the code? <span class="text-accent">Resend</span>
            </button>
          </form>

          <!-- Divider -->
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-border"></div>
            </div>
            <div class="relative flex justify-center text-xs uppercase">
              <span class="bg-background px-4 text-muted-foreground">or</span>
            </div>
          </div>

          <!-- Social Login -->
          <div class="grid grid-cols-2 gap-3">
            <button 
              type="button"
              id="github-btn"
              class="flex items-center justify-center gap-2 px-4 py-3 bg-card border border-border rounded-xl hover:bg-muted transition text-sm font-medium group"
            >
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              <span>GitHub</span>
            </button>

            <button
              type="button"
              id="google-btn"
              class="flex items-center justify-center gap-2 px-4 py-3 bg-card border border-border rounded-xl hover:bg-muted transition text-sm font-medium group"
            >
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span>Google</span>
            </button>
          </div>

          <!-- Error message -->
          <div id="error-message" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

          <!-- Sign in link -->
          <p class="text-center text-sm text-muted-foreground">
            Already have an account? 
            <a href="/login" class="text-foreground font-medium hover:text-accent transition">
              Sign in
            </a>
          </p>
        </div>
      </div>
    </div>

    <script>
      import { createAuthClient } from "better-auth/client";
      import { emailOTPClient } from "better-auth/client/plugins";

      const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
      const authClient = createAuthClient({
        baseURL: API_URL,
        plugins: [emailOTPClient()],
      });

      const emailForm = document.getElementById("email-form") as HTMLFormElement;
      const otpForm = document.getElementById("otp-form") as HTMLFormElement;
      const emailInput = document.getElementById("email") as HTMLInputElement;
      const firstNameInput = document.getElementById("firstName") as HTMLInputElement;
      const lastNameInput = document.getElementById("lastName") as HTMLInputElement;
      const otpInput = document.getElementById("otp") as HTMLInputElement;
      const emailDisplay = document.getElementById("email-display") as HTMLSpanElement;
      const sendOtpBtn = document.getElementById("send-otp-btn") as HTMLButtonElement;
      const verifyBtn = document.getElementById("verify-btn") as HTMLButtonElement;
      const backBtn = document.getElementById("back-btn") as HTMLButtonElement;
      const resendBtn = document.getElementById("resend-btn") as HTMLButtonElement;
      const githubBtn = document.getElementById("github-btn") as HTMLButtonElement;
      const errorMessage = document.getElementById("error-message") as HTMLDivElement;

      let currentEmail = "";
      let currentName = "";

      function showError(message: string) {
        errorMessage.textContent = message;
        errorMessage.classList.remove("hidden");
        setTimeout(() => errorMessage.classList.add("hidden"), 5000);
      }

      function setLoading(button: HTMLButtonElement, loading: boolean, text?: string) {
        button.disabled = loading;
        if (text) button.textContent = text;
      }

      // Send OTP for signup
      emailForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        currentEmail = emailInput.value;
        currentName = `${firstNameInput.value} ${lastNameInput.value}`.trim();
        
        setLoading(sendOtpBtn, true, "Sending code...");
        
        try {
          const { error } = await authClient.emailOtp.sendVerificationOtp({
            email: currentEmail,
            type: "email-verification",
          });

          if (error) {
            showError(error.message || "Failed to send verification code");
            setLoading(sendOtpBtn, false, "Continue");
            return;
          }

          // Show OTP form
          emailForm.classList.add("hidden");
          otpForm.classList.remove("hidden");
          emailDisplay.textContent = currentEmail;
          otpInput.focus();
        } catch (err) {
          showError("Something went wrong. Please try again.");
          setLoading(sendOtpBtn, false, "Continue");
        }
      });

      // Verify OTP and create account
      otpForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const otp = otpInput.value;

        if (otp.length !== 6) {
          showError("Please enter a valid 6-digit code");
          return;
        }

        setLoading(verifyBtn, true, "Creating account...");

        try {
          const { error } = await authClient.emailOtp.verifyEmail({
            email: currentEmail,
            otp,
          });

          if (error) {
            showError(error.message || "Invalid verification code");
            setLoading(verifyBtn, false, "Create account");
            return;
          }

          // Redirect to dashboard or home
          window.location.href = "/";
        } catch (err) {
          showError("Something went wrong. Please try again.");
          setLoading(verifyBtn, false, "Create account");
        }
      });

      // Back button
      backBtn.addEventListener("click", () => {
        otpForm.classList.add("hidden");
        emailForm.classList.remove("hidden");
        setLoading(sendOtpBtn, false, "Continue");
        otpInput.value = "";
      });

      // Resend OTP
      resendBtn.addEventListener("click", async () => {
        try {
          const { error } = await authClient.emailOtp.sendVerificationOtp({
            email: currentEmail,
            type: "email-verification",
          });

          if (error) {
            showError(error.message || "Failed to resend code");
            return;
          }

          resendBtn.innerHTML = "Code sent! <span class='text-accent'>Resend</span>";
          setTimeout(() => {
            resendBtn.innerHTML = "Didn't receive the code? <span class='text-accent'>Resend</span>";
          }, 3000);
        } catch (err) {
          showError("Failed to resend code");
        }
      });

      // GitHub signup
      githubBtn.addEventListener("click", () => {
        authClient.signIn.social({
          provider: "github",
          callbackURL: window.location.origin,
        });
      });

      // Google signup
      const googleBtn = document.getElementById("google-btn") as HTMLButtonElement;
      googleBtn.addEventListener("click", () => {
        authClient.signIn.social({
          provider: "google",
          callbackURL: window.location.origin,
        });
      });

      // Auto-submit when 6 digits entered
      otpInput.addEventListener("input", (e) => {
        const target = e.target as HTMLInputElement;
        target.value = target.value.replace(/\D/g, "").slice(0, 6);
        
        if (target.value.length === 6) {
          otpForm.requestSubmit();
        }
      });
    </script>
  </body>
</html>
