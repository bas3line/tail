---
import "@/styles/globals.css";
import { SITE, PRICING_PLANS } from "@/lib/constants";
import { getSession } from "@/lib/auth-check";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Manage your Tails workspace" } = Astro.props;

const currentPath = Astro.url.pathname;

// Get user session for real data
const session = await getSession(Astro.request);
const user = session?.user;
const userInitial = user?.name?.charAt(0).toUpperCase() || user?.email?.charAt(0).toUpperCase() || "U";
const userName = user?.name || user?.email?.split('@')[0] || "User";
const currentPlan = "Free"; // TODO: Get from user subscription

// Get Pro plan details from pricing
const proPlan = PRICING_PLANS.find(p => p.title === "Pro");

const navItems = [
  { name: "Home", href: "/app", icon: "home" },
  { name: "Drive", href: "/app/drive", icon: "database" },
  { name: "Links", href: "/app/links", icon: "link" },
  { name: "Paste", href: "/app/paste", icon: "code" },
  { name: "Media", href: "/app/media", icon: "image" },
  { name: "API Keys", href: "/app/keys", icon: "key" },
];

const toolsItems = [
  { name: "Video Downloader", href: "/app/tools/video-downloader", icon: "download" },
  { name: "Images", href: "/app/tools/images", icon: "image" },
  { name: "Screenshot API", href: "/app/tools/screenshot", icon: "camera" },
  { name: "QR Codes", href: "/app/tools/qr-codes", icon: "qr" },
  { name: "PDF Tools", href: "/app/tools/pdf", icon: "file" },
  { name: "JSON Tools", href: "/app/tools/json", icon: "braces" },
  { name: "Hash Generator", href: "/app/tools/hash", icon: "hash" },
  { name: "Base64", href: "/app/tools/base64", icon: "binary" },
  { name: "UUID Generator", href: "/app/tools/uuid", icon: "fingerprint" },
];

const isActive = (href: string) => {
  if (href === "/app") return currentPath === "/app" || currentPath === "/app/";
  return currentPath.startsWith(href);
};

const isSettingsPage = currentPath.startsWith("/app/settings");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Theme initialization script (prevent FOUC) -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title} | {SITE.TITLE}</title>
    <meta name="title" content={`${title} | ${SITE.TITLE}`} />
    <meta name="description" content={description} />
  </head>
  <body class="bg-sidebar">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 transform -translate-x-full lg:translate-x-0 transition-transform duration-200 ease-in-out bg-sidebar border-r border-dashed border-sidebar-border flex flex-col">
        <!-- Logo -->
        <div class="h-14 flex items-center px-4 border-b border-dashed border-sidebar-border">
          <a href="/" class="flex items-center gap-2 font-semibold text-base">
            <svg class="w-5 h-5 text-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
            <span>Tails</span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4 px-3">
          <div class="space-y-1">
            {navItems.map((item) => (
              <a
                href={item.href}
                class:list={[
                  "flex items-center gap-2.5 px-2.5 py-1.5 rounded-lg text-xs font-medium transition-colors",
                  isActive(item.href)
                    ? "bg-sidebar-accent text-foreground"
                    : "text-sidebar-foreground hover:bg-sidebar-accent/50 hover:text-foreground"
