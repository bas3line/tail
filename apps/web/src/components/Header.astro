---
import Button from "@/components/ui/Button.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { SITE } from "@/lib/constants";
import Container from "./Container.astro";
import type { Session } from "@/lib/auth-check";

interface Props {
  session?: Session | null;
}

const { session = null } = Astro.props;
---

<header
  id="header"
  class="bg-background z-50 relative max-lg:py-4 backdrop-blur-md"
>
  <div class="lg:border-x border-dashed sm:w-[calc(100%-140px)] mx-auto">
    <Container class="lg:py-4">
      <nav
        id="nav"
        class="group grid grid-cols-2 md:grid-cols-3 transition items-center"
      >
        <!-- mobile nav -->
        <div
          id="mobile-nav"
          class="hidden data-[expanded]:block data-[expanded]:fixed data-[expanded]:inset-0 z-50 pt-20 px-6 h-screen bg-background backdrop-blur-xl md:hidden"
        >
          <ul class="flex flex-col gap-6">
            <li class="w-fit px-2">
              <a href="/tools">Tools</a>
            </li>
            <li class="w-fit px-2">
              <a href="/pricing">Pricing</a>
            </li>
            <li class="w-fit px-2">
              <a href={`mailto:${SITE.EMAIL}`}>Contact</a>
            </li>
            {session ? (
              <li class="w-fit px-2">
                <a href="/app" class="flex items-center gap-2">
                  {session.user.image ? (
                    <img
                      src={session.user.image}
                      alt={session.user.name || session.user.email}
                      class="w-8 h-8 rounded-full"
                    />
                  ) : (
                    <div class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center">
                      <span class="text-sm font-medium text-accent">
                        {session.user.name?.charAt(0).toUpperCase() || session.user.email.charAt(0).toUpperCase()}
                      </span>
                    </div>
                  )}
                  <span>{session.user.name || session.user.email.split('@')[0]}</span>
                </a>
              </li>
            ) : (
              <li class="w-fit px-2">
                <a href="/signup">Sign up</a>
              </li>
            )}
          </ul>
        </div>
        
        <!-- desktop nav - logo -->
        <div class="flex items-center gap-4 justify-start z-100">
          <a href="/home" class="text-xl font-semibold tracking-tight">
            {SITE.TITLE}
          </a>
        </div>
        
        <!-- desktop nav - links -->
        <ul class="items-center gap-1 text-sm justify-center hidden md:flex">
          <li>
            <Button href="/tools" variant="ghost" size="sm">
              Tools
            </Button>
          </li>
          <li>
            <Button href="/pricing" variant="ghost" size="sm">
              Pricing
            </Button>
          </li>
          <li>
            <Button href={`mailto:${SITE.EMAIL}`} variant="ghost" size="sm">
              Contact
            </Button>
          </li>
        </ul>
        
        <!-- desktop nav - auth -->
        <div class="hidden md:flex items-center justify-end gap-2">
          <ThemeToggle />
          {session ? (
            <div class="relative">
              <button
                id="profile-menu-button"
                type="button"
                class="flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-muted transition-colors"
              >
                {session.user.image ? (
                  <img
                    src={session.user.image}
                    alt={session.user.name || session.user.email}
                    class="w-7 h-7 rounded-full"
                  />
                ) : (
                  <div class="w-7 h-7 rounded-full bg-accent/20 flex items-center justify-center">
                    <span class="text-sm font-medium text-accent">
                      {session.user.name?.charAt(0).toUpperCase() || session.user.email.charAt(0).toUpperCase()}
                    </span>
                  </div>
                )}
                <span class="text-sm font-medium">{session.user.name || session.user.email.split('@')[0]}</span>
                <svg class="w-4 h-4 transition-transform" id="profile-menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Dropdown menu -->
              <div
                id="profile-menu"
                class="hidden absolute right-0 mt-2 w-48 bg-card border border-border rounded-lg shadow-lg py-1 z-50"
              >
                <a href="/app" class="flex items-center gap-2 px-4 py-2 text-sm hover:bg-muted transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"/>
                  </svg>
                  App
                </a>
                <div class="border-t border-border my-1"></div>
                <a href="/app/settings/account" class="flex items-center gap-2 px-4 py-2 text-sm hover:bg-muted transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Settings
                </a>
              </div>
            </div>
          ) : (
            <>
              <Button href="/login" variant="ghost" size="sm">
                Sign in
              </Button>
              <Button href="/signup" size="sm">
                Get Started
              </Button>
            </>
          )}
        </div>
        
        <!-- mobile nav toggle -->
        <div class="flex items-center justify-end gap-2 md:hidden z-100">
          <ThemeToggle />
          <button
            id="toggle"
            type="button"
            aria-label="Toggle mobile navigation"
            class="flex flex-col justify-center gap-1.5 size-6 focus-visible:outline-dashed focus-visible:outline-offset-1"
          >
            <span
              id="bar"
              class="h-0.5 self-start bg-foreground w-1/2 data-[expanded]:w-[calc(50%-3px)] data-[expanded]:rotate-45 data-[expanded]:translate-y-[2px] data-[expanded]:translate-x-[2px] transition duration-300"
            ></span>
            <span
              id="bar"
              class="h-0.5 w-full bg-foreground data-[expanded]:-rotate-45 transition duration-300"
            ></span>
            <span
              id="bar"
              class="h-0.5 self-end bg-foreground w-1/2 data-[expanded]:w-[calc(50%-3px)] data-[expanded]:rotate-45 data-[expanded]:-translate-y-[3px] data-[expanded]:-translate-x-0.5 transition duration-300"
            ></span>
          </button>
        </div>
      </nav>
    </Container>
  </div>
</header>

<script>
  function initMobileNav() {
    const toggle = document.getElementById("toggle");
    const nav = document.getElementById("mobile-nav");

    const toggleNav = () => {
      nav?.toggleAttribute("data-expanded");
      document.body.classList.toggle("overflow-hidden");
      document.body.classList.toggle("fixed");
      document.body.classList.toggle("w-full");
      const barElements = document.querySelectorAll("#bar");
      for (const el of barElements) {
        el.toggleAttribute("data-expanded");
      }
    };

    if (toggle) {
      toggle.addEventListener("click", toggleNav);
    }
  }

  initMobileNav();
  document.addEventListener("astro:after-swap", initMobileNav);

  // Profile dropdown menu
  function initProfileMenu() {
    const profileButton = document.getElementById("profile-menu-button");
    const profileMenu = document.getElementById("profile-menu");
    const profileIcon = document.getElementById("profile-menu-icon");

    if (profileButton && profileMenu) {
      profileButton.addEventListener("click", (e) => {
        e.stopPropagation();
        profileMenu.classList.toggle("hidden");
        profileIcon?.classList.toggle("rotate-180");
      });

      // Close dropdown when clicking outside
      document.addEventListener("click", () => {
        profileMenu.classList.add("hidden");
        profileIcon?.classList.remove("rotate-180");
      });

      // Prevent closing when clicking inside the dropdown
      profileMenu.addEventListener("click", (e) => {
        e.stopPropagation();
      });
    }
  }

  initProfileMenu();
  document.addEventListener("astro:after-swap", initProfileMenu);
</script>
