---
const actions = [
  {
    title: "Upload File",
    description: "Upload to Drive",
    href: "/app/drive?action=upload",
    icon: "upload"
  },
  {
    title: "Create Link",
    description: "Shorten a URL",
    href: "/app/links?action=create",
    icon: "link"
  },
  {
    title: "New Paste",
    description: "Share code",
    href: "/app/paste?action=create",
    icon: "code"
  },
  {
    title: "API Docs",
    description: "View documentation",
    href: "/docs/api",
    icon: "book"
  },
];
---

<div class="rounded-[20px] bg-surface p-1.5">
  <div class="rounded-[12px] bg-background p-6 shadow-xs">
    <h3 class="font-semibold text-lg mb-4">Quick Actions</h3>

    <div class="space-y-2">
      {actions.map((action) => (
        <a
          href={action.href}
          class="group flex items-center gap-3 p-3 rounded-lg hover:bg-surface transition-colors"
        >
          <!-- Icon -->
          <div class="w-9 h-9 rounded-lg bg-muted flex items-center justify-center flex-shrink-0 group-hover:bg-border transition-colors">
            {action.icon === "upload" && (
              <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"/>
              </svg>
            )}
            {action.icon === "link" && (
              <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"/>
              </svg>
            )}
            {action.icon === "code" && (
              <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"/>
              </svg>
            )}
            {action.icon === "book" && (
              <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
              </svg>
            )}
          </div>
          
          <!-- Content -->
          <div class="flex-1 min-w-0">
            <p class="font-medium text-sm">{action.title}</p>
            <p class="text-xs text-muted-foreground">{action.description}</p>
          </div>
          
          <!-- Arrow -->
          <svg class="w-4 h-4 text-muted-foreground opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
          </svg>
        </a>
      ))}
    </div>
  </div>
</div>

