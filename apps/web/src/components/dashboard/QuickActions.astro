---
const actions = [
  {
    title: "Upload File",
    description: "Upload to Drive",
    href: "/app/drive?action=upload",
    icon: "upload",
    bgColor: "bg-green-100 dark:bg-green-900/30",
    iconColor: "text-green-600 dark:text-green-400"
  },
  {
    title: "Create Link",
    description: "Shorten a URL",
    href: "/app/links?action=create",
    icon: "link",
    bgColor: "bg-accent/10",
    iconColor: "text-accent"
  },
  {
    title: "New Paste",
    description: "Share code",
    href: "/app/paste?action=create",
    icon: "code",
    bgColor: "bg-purple-100 dark:bg-purple-900/30",
    iconColor: "text-purple-600 dark:text-purple-400"
  },
  {
    title: "API Docs",
    description: "View documentation",
    href: "/docs/api",
    icon: "book",
    bgColor: "bg-amber-100 dark:bg-amber-900/30",
    iconColor: "text-amber-600 dark:text-amber-400"
  },
];
---

<div class="rounded-[20px] bg-surface p-2">
  <div class="px-4 pt-4 pb-2">
    <h3 class="font-semibold text-xl">Quick Actions</h3>
  </div>

  <div class="bg-background rounded-[12px] shadow-xs overflow-hidden">
    <div class="grid grid-cols-2">
      {actions.map((action, index) => (
        <a
          href={action.href}
          class:list={[
            "p-4 flex flex-col items-center gap-3 hover:bg-surface/50 transition-all duration-200 group",
            index < 2 && "border-b border-border/50",
            index % 2 === 0 && "border-r border-border/50"
          ]}
        >
          <div class:list={[
            "w-12 h-12 rounded-2xl flex items-center justify-center transition-transform duration-200 group-hover:scale-110",
            action.bgColor,
            action.iconColor
          ]}>
            {action.icon === "upload" && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"/>
              </svg>
            )}
            {action.icon === "link" && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"/>
              </svg>
            )}
            {action.icon === "code" && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"/>
              </svg>
            )}
            {action.icon === "book" && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
              </svg>
            )}
          </div>
          <div class="text-center">
            <p class="text-sm font-medium">{action.title}</p>
            <p class="text-xs text-muted-foreground">{action.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>

