---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

type Props = HTMLAttributes<"a"> &
  HTMLAttributes<"button"> & {
    variant?: "primary" | "secondary" | "outline" | "ghost";
    size?: "default" | "sm" | "lg" | "icon";
  };

const {
  variant = "primary",
  size = "default",
  class: className,
  href,
  ...rest
} = Astro.props;

const variants = {
  primary: "bg-accent text-white hover:opacity-90",
  secondary: "bg-muted text-foreground hover:opacity-80",
  outline: "border border-border bg-transparent hover:bg-muted",
  ghost: "hover:bg-muted text-muted-foreground hover:text-foreground",
};

const sizes = {
  default: "h-11 px-6 py-2",
  sm: "h-9 px-4",
  lg: "h-12 px-8",
  icon: "h-10 w-10",
};

const baseClass =
  "inline-flex items-center justify-center transition duration-200 whitespace-nowrap rounded-lg text-sm font-medium focus-visible:outline-2 focus-visible:outline-offset-2 outline-accent disabled:pointer-events-none disabled:opacity-50 cursor-pointer";

const classes = cn(baseClass, variants[variant], sizes[size], className);

const Element = href ? "a" : "button";
---

<Element href={href} class={classes} {...rest}>
  <slot />
</Element>
