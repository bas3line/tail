# ===========================================
# Tails Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Use a managed PostgreSQL service like:
# - Supabase, Neon, Railway, PlanetScale, AWS RDS
DATABASE_URL=postgresql://user:password@host:5432/tails

# ===========================================
# Redis (Required for production)
# ===========================================
# Use a managed Redis service like:
# - Upstash, Redis Cloud, AWS ElastiCache
# For TLS/SSL connections, use rediss:// protocol
# Example: rediss://username:password@host:6380
REDIS_URL=redis://localhost:6379
# REDIS_URL=rediss://default:password@your-redis-host.upstash.io:6380

# ===========================================
# AWS S3 / Compatible Storage
# ===========================================
# Works with AWS S3, Cloudflare R2, MinIO, Backblaze B2
S3_REGION=us-east-1
S3_BUCKET=tails
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key

# Optional: For S3-compatible services (R2, MinIO, etc.)
# S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Optional: CDN URL for public files
# CDN_URL=https://cdn.yourdomain.com

# ===========================================
# Authentication
# ===========================================
# Secret for signing JWTs and cookies (generate a secure random string)
AUTH_SECRET=your-super-secret-key-change-this-in-production

# Base URL for auth callbacks
AUTH_URL=http://localhost:3000

# ===========================================
# GitHub OAuth (optional)
# ===========================================
# Create an OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===========================================
# Google OAuth (optional)
# ===========================================
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# Set Authorized redirect URI to: {API_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# Email (Resend)
# ===========================================
# Get your API key at: https://resend.com
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=Tails <noreply@yourdomain.com>

# ===========================================
# URLs
# ===========================================
# API server URL
API_URL=http://localhost:3000

# Web app URL
WEB_URL=http://localhost:4321

# Public URL for short links (can be a custom domain)
PUBLIC_URL=http://localhost:3000

# ===========================================
# Security
# ===========================================
# Comma-separated list of blocked IPs (optional)
# BLOCKED_IPS=1.2.3.4,5.6.7.8

# Rate limiting (requests per window)
# RATE_LIMIT_WINDOW=60000
# RATE_LIMIT_MAX=100

# ===========================================
# Logging
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# Server
# ===========================================
# API server port
PORT=3000
