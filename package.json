{
  "name": "tails",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "stop": "bun scripts/stop.ts",
    "database": "bun scripts/db.ts",
    "db:generate": "cd packages/db && bun run generate",
    "db:migrate": "cd packages/db && bun --env-file=../../.env run push",
    "db:push": "cd packages/db && bun --env-file=../../.env run push",
    "db:studio": "cd packages/db && bun --env-file=../../.env run studio"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "date-fns-tz": "^3.2.0",
    "papaparse": "^5.5.3"
  }
}
